	      "options": {
	      	"ipad": "iPad",
	      	"iphone": "iPhone",
	      	"ipadiphone": "iPad and iPhone"
	      }
		},
		"download" : {
	      "label": "Download App",
	      "description": "Comma seperated list of layout keys",
